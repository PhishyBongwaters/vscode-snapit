{
	"name": "snapit",
	"displayName": "SnapIT",
	"description": "Gitless repository for VSCode",
	"version": "1.0.3",
	"publisher": "RobMacDonald",
	"author": {
		"name": "Rob MacDonald",
		"url": "https://github.com/PhishyBongwaters"
	},
	"icon": "media/gitlite-icon.png",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/PhishyBongwaters/vscode-snapit"
	},
	"engines": {
		"vscode": "^1.84.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"snapshot",
		"backup",
		"version control",
		"save",
		"restore",
		"history",
		"undo",
		"gitless",
		"git-less",
		"simple version control",
		"save points",
		"code backup",
		"quick backup",
		"workspace snapshot"
	],
	"activationEvents": [
		"onCommand:snapit.createSnapshot",
		"onCommand:snapit.restoreSnapshot",
		"onCommand:snapit.listSnapshots",
		"onCommand:snapit.deleteSnapshot",
		"onView:snapit.snapshotList"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "snapit-explorer",
					"title": "SnapIT",
					"icon": "media/gitlite-icon.png"
				}
			]
		},
		"views": {
			"snapit-explorer": [
				{
					"id": "snapit.snapshotList",
					"name": "Snapshots",
					"when": "workspaceFolderCount > 0"
				}
			]
		},
		"commands": [
			{
				"command": "snapit.createSnapshot",
				"title": "SnapIT: Create Snapshot"
			},
			{
				"command": "snapit.restoreSnapshot",
				"title": "SnapIT: Restore Snapshot"
			},
			{
				"command": "snapit.listSnapshots",
				"title": "SnapIT: List Snapshots"
			},
			{
				"command": "snapit.deleteSnapshot",
				"title": "SnapIT: Delete Snapshot"
			},
			{
				"command": "snapit.refreshSnapshots",
				"title": "Refresh Snapshots",
				"icon": "$(refresh)"
			},
			{
				"command": "snapit.snapshotRestore",
				"title": "Restore",
				"icon": "$(cloud-download)"
			},
			{
				"command": "snapit.snapshotDelete",
				"title": "Delete",
				"icon": "$(trash)"
			},
			{
				"command": "snapit.snapshotDetails",
				"title": "Snapshot Details"
			}
		],
		"configuration": {
			"title": "SnapIT",
			"properties": {
				"snapit.autoBackupOnSave": {
					"type": "boolean",
					"default": false,
					"description": "Automatically create a backup snapshot when files are saved"
				},
				"snapit.maxSnapshots": {
					"type": "integer",
					"default": 100,
					"minimum": 1,
					"maximum": 100,
					"description": "Maximum number of snapshots to keep"
				},
				"snapit.excludeFolders": {
					"type": "array",
					"default": [".backup", "node_modules", "out", ".git", ".vscode", "build", ".next"],
					"items": {
						"type": "string"
					},
					"description": "Folders to exclude from snapshots"
				},
				"snapit.excludeHiddenFiles": {
					"type": "boolean",
					"default": true,
					"description": "Exclude hidden files (starting with .) from snapshots"
				},
				"snapit.snapshotStoragePath": {
					"type": "string",
					"default": ".backup",
					"description": "Path (relative to workspace) where snapshots are stored"
				}
			}
		},
		"menus": {
			"view/item/context": [
				{
					"command": "snapit.snapshotRestore",
					"when": "viewItem == snapshot",
					"group": "inline@1"
				},
				{
					"command": "snapit.snapshotDelete",
					"when": "viewItem == snapshot",
					"group": "inline@2"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.x",
		"@types/vscode": "^1.84.0",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.0",
		"eslint": "^8.52.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^5.2.2",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4",
		"ts-loader": "^9.5.0"
	},
	"__metadata": {
		"installedTimestamp": 1770044603778,
		"targetPlatform": "undefined",
		"size": 188641
	}
}